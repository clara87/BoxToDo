@model DataAccessLayer.ComentarioTarea

@using (Html.BeginForm("AgregarComentario", "Tareas", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(a => a.IdTarea)
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.EditorFor(model => model.Texto, new { htmlAttributes = new { @class = "form-control input-lg", placeholder = "Escriba un comentario..." } })
    @Html.ValidationMessageFor(model => model.Texto, "", new { @class = "text-danger" })
    <br>
    <input type="submit" value="Agregar" class="btn btn-primary" />
}
